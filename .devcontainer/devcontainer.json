{
  "name": "Dev Container",
  "dockerComposeFile": [
    "../docker-compose.yml",
    "docker-compose.yml"
  ],
  "service": "web",
  "runServices": [
    "web",
    "db",
    "redis"
  ],
  "workspaceFolder": "/app",
  "customizations": {
    "vscode": {
      "extensions": [
        "KoichiSasada.vscode-rdbg",
        "Shopify.ruby-lsp"
      ],
      "settings": {
        "ruby.useLanguageServer": true
      }
    }
  }
}