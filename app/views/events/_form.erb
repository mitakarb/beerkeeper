<%= form_with model: @event, class: "needs-validation" do |form| %>
  <div class="container py-4">
    <div class="row g-4">
      <div class="col-md-12">
        <div class="card shadow-sm border-0">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-calendar-event me-2"></i>イベント日時</h5>
          </div>
          <div class="card-body bg-light">
            <div class="mb-4">
              <%= form.label :start_at, class: "form-label fw-bold" %>
              <div class="d-flex align-items-center gap-2 flex-wrap">
                <%= form.date_field 'date' %>
                <%= form.time_field 'time' %>
              </div>
            </div>
            <div class="mb-4">
              <%= form.label :end_at, class: "form-label fw-bold" %>
              <div class="d-flex align-items-center gap-2 flex-wrap">
                <%= form.date_field 'date' %>
                <%= form.time_field 'time' %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-12">
        <div class="card shadow-sm border-0">
          <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>イベント詳細</h5>
          </div>
          <div class="card-body bg-light">
            <div class="mb-4">
              <%= form.label :name, class: "form-label fw-bold" %>
              <%= form.text_field :name, class: "form-control shadow-sm", placeholder: "イベント名を入力してください" %>
            </div>
            <div class="mb-4">
              <%= form.label :location, class: "form-label fw-bold" %>
              <%= form.text_field :location, class: "form-control shadow-sm", placeholder: "開催場所を入力してください" %>
            </div>
            <div class="mb-4">
              <%= form.label :max_size, class: "form-label fw-bold" %>
              <%= form.number_field :max_size, class: "form-control shadow-sm", placeholder: "参加人数を入力してください" %>
            </div>
            <div class="mb-4">
              <%= form.label :budget, class: "form-label fw-bold" %>
              <%= form.text_field :budget, class: "form-control shadow-sm", placeholder: "参加費を入力してください" %>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-12">
        <div class="card shadow-sm border-0">
          <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-file-text me-2"></i>イベント説明</h5>
          </div>
          <div class="card-body bg-light">
            <div class="mb-4">
              <%= form.label :description, class: "form-label fw-bold" %>
              <%= form.text_area :description, class: "form-control shadow-sm", rows: 5, placeholder: "イベントの詳細な説明を入力してください" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
      <%= link_to 'キャンセル', root_path, class: "btn btn-outline-secondary me-md-2 px-4" %>
      <%= form.submit "保存", class: "btn btn-primary px-4" %>
    </div>
  </div>
<% end %>
