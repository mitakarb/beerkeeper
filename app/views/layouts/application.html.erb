<!DOCTYPE html>
<html>
  <head>
    <title>Beerkeeper</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag('favicon.ico') %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <%= link_to root_path, class: 'navbar-brand' do %>
          <%= image_tag "logo.svg", width: '180' %>
        <% end %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <% if current_user %>
                <%= link_to 'ログアウト', session_path(current_user), class: 'nav-link', data: { turbo_method: :delete } %>
              <% else %>
                <div class="d-flex gap-2">
                  <%= link_to 'ログイン', login_path, class: 'nav-link' %>
                  <%= link_to 'サインアップ', signup_path, class: 'nav-link' %>
                </div>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <% flash.each do |message_type, message| %>
        <%= render(AlertComponent.new(message_type: message_type, message: message) ) %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
